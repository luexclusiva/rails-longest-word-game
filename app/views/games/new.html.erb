<h1>New game</h1>
<div class="container">
  <h3>Here is your grid</h3>
  <hr>
  <p>
    <% @grid.each do |letter| %>
      <%= letter %> -
    <% end %>
  </p>
  <hr>
  <form action="/score", method = "POST">
    <%= hidden_field_tag :array, @grid %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="user_word">
    <input type="submit" value="Play">
</form>
</div>
